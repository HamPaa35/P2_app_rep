<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pjevs.projecttest1">

    <application
        android:name=".customApplication"
        android:allowBackup="true"
        android:icon="@drawable/app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="Pocket Inventory"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".inventory"
            android:label="Inventory"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".settings"
            android:label="Settings"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".additem"
            android:label="Add new item"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".editItem"
            android:label="Edit your item"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".GeneralSettings"
            android:label="General settings"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Notifications"
            android:label="Notification settings"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".AddCategoryActivity"
            android:label="Add new category"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".CategoriesActivity"
            android:label="All categories"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".statisticsActivity"
            android:label="Waste statistics"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".editCategory"
            android:label="Edit your category"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            >

        </activity>
    </application>

</manifest>